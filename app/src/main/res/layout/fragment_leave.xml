<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.ReportFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">




            <TextView
                android:id="@+id/txt_type1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_gravity="center_vertical"
                android:layout_margin="15dp"
                android:text="بازه زمانی درخواست "
                android:textSize="15sp" />

            <LinearLayout
                android:id="@+id/layoutLeaveType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:gravity="center_horizontal">

                <RadioGroup
                    android:id="@+id/selected_leave_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_margin="20dp"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/selected_timeOfDay2"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:layout_marginRight="30dp"
                        android:text="بیش از یک روز"
                        android:theme="@style/MyRadioButtonReport" />

                    <RadioButton
                        android:id="@+id/selected_timeOfDay1"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:layout_marginRight="15dp"
                        android:text="یک روز"
                        android:theme="@style/MyRadioButtonReport" />


                </RadioGroup>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/relativeLayout_editText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/layoutLeaveType"
                android:layout_alignParentRight="true">


                <EditText
                    android:id="@+id/editTextEndDate"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:layout_marginRight="2dp"
                    android:background="@drawable/textview_report_style"
                    android:editable="false"
                    android:focusable="false"
                    android:hint="       تاریخ پایان       "
                    android:textColor="@color/black"
                    android:textCursorDrawable="@null"
                    android:textSize="14sp" />

                <ImageView
                    android:id="@+id/imgEndDate"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:background="@drawable/calendar_menu_icon"
                    android:layout_marginRight="20dp"
                    android:textColor="@color/black" />

                <EditText
                    android:id="@+id/editTextStartDate"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:layout_marginRight="2dp"
                    android:background="@drawable/textview_report_style"
                    android:editable="false"
                    android:focusable="false"
                    android:hint="       تاریخ شروع       "
                    android:textColor="@color/black"
                    android:textCursorDrawable="@null"
                    android:textSize="14sp" />

                <ImageView
                    android:id="@+id/imgStartDate"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginRight="2dp"
                    android:background="@drawable/calendar_menu_icon"
                    android:textColor="@color/black" />


            </LinearLayout>


            <TextView
                android:id="@+id/txt_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/relativeLayout_editText"
                android:layout_alignParentRight="true"
                android:layout_gravity="center_vertical"
                android:layout_margin="15dp"
                android:text="نوع "
                android:textSize="15sp" />

            <LinearLayout
                android:id="@+id/layoutRequestType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/relativeLayout_editText"
                android:layout_margin="5dp"
                android:gravity="center_horizontal">

                <RadioGroup
                    android:id="@+id/selected_requestTypeEN"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_margin="20dp"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/requestTypeEN3"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:layout_marginRight="30dp"
                        android:text="استعلاجی"
                        android:theme="@style/MyRadioButtonReport" />

                    <RadioButton
                        android:id="@+id/requestTypeEN2"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:layout_marginRight="15dp"
                        android:text="بدون حقوق"
                        android:theme="@style/MyRadioButtonReport" />

                    <RadioButton
                        android:id="@+id/requestTypeEN1"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:layout_marginRight="15dp"
                        android:text="استحقاقی"
                        android:theme="@style/MyRadioButtonReport" />

                </RadioGroup>

            </LinearLayout>


            <gap.com.driver.widget.CustomEditText
                android:id="@+id/desc1"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_below="@+id/layoutRequestType"
                android:layout_margin="10dp"
                android:background="@drawable/textview_report_style"
                android:gravity="right"
                android:hint="توضیحات"
                android:padding="10dp"
                android:textColor="@color/black"
                android:textCursorDrawable="@null"
                android:textSize="14sp" />

            <RelativeLayout
                android:id="@+id/attach_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/desc1"
                android:visibility="visible">

                <androidx.cardview.widget.CardView
                    android:id="@+id/card_attach"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@color/iron"
                    android:layout_alignParentRight="true"
                    android:layout_margin="10dp">
                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/img_select"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:background="@drawable/atach_file"/>
                </androidx.cardview.widget.CardView>


                <gap.com.driver.widget.BTextView
                    android:id="@+id/txt_fileName"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_toLeftOf="@+id/card_attach"
                    android:layout_margin="10dp"
                    android:text="file name ..."
                    android:gravity="center_vertical"/>

                <androidx.cardview.widget.CardView
                    android:id="@+id/card_imgShow"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/card_attach"
                    android:layout_margin="2dp">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/img_attach"
                        android:layout_width="250dp"
                        android:layout_height="250dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_margin="2dp"/>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recycler_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"/>


                </androidx.cardview.widget.CardView>

            </RelativeLayout>


            <Button
                android:id="@+id/btn_send"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_margin="30dp"
                android:background="@drawable/button_corner"
                android:text="ثبت"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_below="@+id/attach_layout"/>

            <gap.com.driver.widget.CircularProgress
                android:id="@+id/progressbar"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerInParent="true"
                android:visibility="gone" />

        </RelativeLayout>
    </ScrollView>



</FrameLayout>