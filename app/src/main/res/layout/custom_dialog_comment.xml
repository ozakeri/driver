<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:id="@+id/back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_rect1"
        android:paddingBottom="40dp">


        <gap.com.driver.widget.BSpinnerView
            android:id="@+id/comment_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp" />


        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/img_close"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_margin="15dp"
            android:background="@drawable/close_icon" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/comment"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_below="@+id/comment_spinner"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/border_comment_edittext"
            android:gravity="right"
            android:imeOptions="actionDone"
            android:padding="10dp"
            android:textColor="@color/mdtp_transparent_black"
            android:textColorHint="@color/iron" />

        <gap.com.driver.widget.BTextView
            android:id="@+id/btn_send"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_below="@+id/comment"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"
            android:background="@drawable/background_button"
            android:gravity="center"
            android:text="ارسال"
            android:textColor="@android:color/white" />


    </RelativeLayout>



    <gap.com.driver.widget.CircularProgress
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/progressbar"
        android:layout_centerHorizontal="true"
        app:circular_progress_color="@android:color/white"
        android:layout_alignTop="@+id/ok"
        android:visibility="gone"/>
</RelativeLayout>
