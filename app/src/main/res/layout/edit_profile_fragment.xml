<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <gap.com.driver.widget.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="اطلاعات شخصی"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_gravity="right"
                    android:layout_margin="10dp"/>

                <View
                    android:layout_width="200dp"
                    android:layout_height="1dp"
                    android:layout_gravity="right"
                    android:background="@color/aluminum"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/img_driverImage"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:background="@mipmap/ic_launcher"
                        android:layout_margin="10dp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/img_attach"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_margin="10dp"
                            android:background="@mipmap/ic_launcher" />

                        <gap.com.driver.widget.CustomTextView
                            android:id="@+id/txt_edit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:textSize="18sp"
                            android:layout_margin="10dp"
                            android:text="ویرایش عکس" />




                    </LinearLayout>

                </LinearLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">


                    <gap.com.driver.widget.CustomEditText
                        android:id="@+id/txt_address"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@drawable/textview_report_style"
                        android:textColor="@color/black"
                        android:textCursorDrawable="@null"
                        android:text="بهمن نجاتی"
                        android:textSize="15sp"
                        android:gravity="center"
                        android:layout_gravity="right"
                        android:layout_margin="10dp"
                        android:layout_toLeftOf="@+id/img_address"
                        android:layout_centerVertical="true"/>

                    <ImageView
                        android:id="@+id/img_address"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@mipmap/ic_launcher"
                        android:layout_margin="10dp"
                        android:layout_alignParentRight="true"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal">


                    <ImageView
                        android:id="@+id/img_electricBillAttach"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:background="@mipmap/ic_launcher"
                        android:layout_margin="10dp"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@+id/txt_electricBill"
                        android:visibility="gone"/>

                    <ImageView
                        android:id="@+id/img_electricBill"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@mipmap/ic_launcher"
                        android:layout_toLeftOf="@+id/txt_electricBill"
                        android:layout_margin="10dp"/>

                    <gap.com.driver.widget.CustomTextView
                        android:id="@+id/txt_electricBill"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_margin="10dp"
                        android:layout_centerHorizontal="true"
                        android:gravity="center"
                        android:text="افزودن تصویر قبض برق"
                        android:textSize="15sp" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <gap.com.driver.widget.CustomEditText
                        android:id="@+id/txt_postCode"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@drawable/textview_report_style"
                        android:textColor="@color/black"
                        android:textCursorDrawable="@null"
                        android:text="5462135871"
                        android:textSize="15sp"
                        android:layout_gravity="right"
                        android:gravity="center"
                        android:layout_margin="10dp"
                        android:layout_toLeftOf="@+id/img_postCode"
                        android:layout_centerVertical="true"/>

                    <ImageView
                        android:id="@+id/img_postCode"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@mipmap/ic_launcher"
                        android:layout_margin="10dp"
                        android:layout_alignParentRight="true"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <gap.com.driver.widget.CustomEditText
                        android:id="@+id/txt_mobileNo"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@drawable/textview_report_style"
                        android:textColor="@color/black"
                        android:textCursorDrawable="@null"
                        android:text="0912-8877554"
                        android:textSize="15sp"
                        android:layout_gravity="right"
                        android:gravity="center"
                        android:layout_margin="10dp"
                        android:layout_toLeftOf="@+id/img_mobileNo"
                        android:layout_centerVertical="true"/>

                    <ImageView
                        android:id="@+id/img_mobileNo"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@mipmap/ic_launcher"
                        android:layout_margin="10dp"
                        android:layout_alignParentRight="true"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <gap.com.driver.widget.CustomEditText
                        android:id="@+id/txt_phoneNo"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@drawable/textview_report_style"
                        android:textColor="@color/black"
                        android:textCursorDrawable="@null"
                        android:text="021-55887755"
                        android:textSize="15sp"
                        android:layout_gravity="right"
                        android:gravity="center"
                        android:layout_margin="10dp"
                        android:layout_toLeftOf="@+id/img_phoneNo"
                        android:layout_centerVertical="true"/>

                    <ImageView
                        android:id="@+id/img_phoneNo"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@mipmap/ic_launcher"
                        android:layout_margin="10dp"
                        android:layout_alignParentRight="true"/>

                </RelativeLayout>


                <Button
                    android:id="@+id/btn_send"
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:layout_margin="30dp"
                    android:background="@drawable/ok_dialog"
                    android:text="ثبت"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    android:gravity="center"
                    android:layout_gravity="center_horizontal"
                    android:layout_below="@+id/desc1"/>


            </LinearLayout>

        </ScrollView>
    </FrameLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
